    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "autoAttachChildProcesses": true,
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "vitest",
            "args": ["run", "${relativeFile}"],
            "smartStep": true,
            "console": "integratedTerminal",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["exec"]
        }
    ]
}
